{
    "name": "devisephp/cms",
    "description": "Content Management System riding on top of the Laravel Framework",
    "keywords": ["cms", "devise", "devisephp", "laravel", "content management system"],
    "license": "MIT",
    "authors": [
        {
            "name": "DevisePHP Team Is Awesome",
            "email": "info@devisephp.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "masterminds/html5": "1.*",
        "guzzlehttp/guzzle": "~4.0",
        "zencoder/zencoder-php": "*",
        "ext-imagick": "*",
        "symfony/console": "~2.0",
        "illuminate/html": "5.0.*",
        "doctrine/dbal": "~2.3",
        "league/commonmark": "0.7.*"
    },
    "require-dev": {
        "mockery/mockery": "0.9.3",
        "phpunit/phpunit": "*",
        "mikey179/vfsStream": "*",
        "codeception/codeception": "*"
    },
    "autoload": {
        "classmap": [
            "src/models",
            "src/seeds",
            "src/migrations",
            "tests/DeviseTestCase.php"
        ],
        "psr-0": {
            "Devise\\": "src/"
        }
    },
    "scripts": {
        "docs" : "vendor/bin/sami.php update sami.php",
        "acceptance": "tests/bootstrap/acceptance.sh",
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    "minimum-stability": "stable"
}
