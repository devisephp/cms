{
    "name": "devisephp/cms",
    "description": "Content Management System riding on top of the Laravel Framework",
    "authors": [
        {
            "name": "DevisePHP Team",
            "email": "info@devisephp.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "masterminds/html5": "1.*",
        "guzzlehttp/guzzle": "~4.0",
        "zencoder/zencoder-php": "*",
        "ext-imagick": "*",
        "symfony/console": "~2.0",
        "illuminate/html": "5.0.*"
    },
    "require-dev": {
        "laravel/framework": "5.0.*@dev", //https://github.com/laravel/framework/pull/7306 - Waiting for this to be merged in to 5.0 branch (likely 5.0.3)
        "mockery/mockery": "dev-master",
        "phpunit/phpunit": "*",
        "mikey179/vfsStream": "*"
    },
    "autoload": {
        "classmap": [
            "src/models",
            "src/seeds",
            "src/migrations",
            "tests/DeviseTestCase.php"
        ],
        "psr-0": {
            "Devise\\": "src/"
        }
    },
    "scripts": {
        "docs" : "vendor/bin/sami.php update sami.php"
    },
    "minimum-stability": "stable"
}
